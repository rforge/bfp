citHeader("To cite package 'bfp' in publications use:")

citEntry(entry="techreport",
	 title="Bayesian Fractional Polynomials",
	 author=personList(as.person("Daniel Sabanes Bove"),
	 	           as.person("Leonhard Held")), 
         institution="University of Zurich, Institute of Social and Preventive Medicine, Biostatistics Unit",
	 year=2009,
	 url="http://www.biostat.uzh.ch/research/manuscripts/bayesianFps.pdf",
	 textVersion=paste("Sabanes Bove, D. and Held, L. (2009):",
	                   "Bayesian Fractional Polynomials.",
			   "Technical Report, University of Zurich, Institute of Social and Preventive Medicine, Biostatistics Unit.",
	 	    	   "URL http://www.biostat.uzh.ch/research/manuscripts/bayesianFps.pdf.")) 

